#!/bin/bash
(
    flock -x -n 200 || exit 0
    if [ "$1" != "--now" ]; then
        sleep $(( RANDOM %= <%= @cron_jitter %> ))
    fi
    rdiff-backup --no-eas --exclude-special-files --include-symbolic-links <%= @_include %> <%= @_exclude %> <%= @path %> <%= @rdiff_user %>@<%= @rdiff_server %>::<%= @remote_path %>/<%= @fqdn %>/<%= @title %>
    if [ $? == '0' ]; then
        rdiff-backup -v0 --force --remove-older-than <%= @rdiff_retention %> <%= @rdiff_user %>@<%= @rdiff_server %>::<%= @remote_path %>/<%= @fqdn %>/<%= @title %>
    fi
) 200>/var/lock/rdiff_etc_run.lock
