#!/bin/bash
(
    flock -x -n 200 || exit 0
    if [ "$1" != "--now" ]; then
        sleep $(( RANDOM %= <%= @cron_jitter %> ))
    fi
    rdiff-backup <%= @_noeas %> <%= @_includesymboliclinks %> <%= @_excludespecialfiles %> <%= @_pre_exclude %> <%= @_include %> <%= @_exclude %> <%= @path %> <%= @remote_path %>/<%= @fqdn %>/<%= @title %>
    if [ $? == '0' ]; then
        rdiff-backup -v0 --force --remove-older-than <%= @rdiff_retention %> <%= @remote_path %>/<%= @fqdn %>/<%= @title %>
    fi
) 200>/var/lock/rdiff_<%= @title %>_run.lock
